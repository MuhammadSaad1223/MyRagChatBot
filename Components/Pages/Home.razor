@page "/"

<PageTitle>MyRagChatBot - Home</PageTitle>

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 mb-4">
            <i class="bi bi-robot text-primary"></i> Welcome to RAG ChatBot
        </h1>
        <p class="lead mb-4">
            A smart chatbot that answers questions based on your documents using AI
        </p>

        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <h3 class="card-title mb-4">🚀 Get Started</h3>

                        <div class="row text-start mt-4">
                            <div class="col-md-6 mb-4">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <span class="badge bg-primary rounded-circle p-2">1</span>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5>Go to Chat</h5>
                                        <p class="text-muted">Click the button below to start chatting</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <span class="badge bg-success rounded-circle p-2">2</span>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5>Upload Document</h5>
                                        <p class="text-muted">Upload .txt or .pdf files for context</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <span class="badge bg-info rounded-circle p-2">3</span>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5>Ask Questions</h5>
                                        <p class="text-muted">Get AI-powered answers based on your documents</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <span class="badge bg-warning rounded-circle p-2">4</span>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5>Smart Responses</h5>
                                        <p class="text-muted">Combines document search with AI generation</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-5">
                            <a href="/chat" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-chat-left-text me-2"></i> Start Chatting
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>